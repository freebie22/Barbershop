@model IEnumerable<Barbershop.Models.Products>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Перелік товарів</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Додати новий товар
            </a>
        </div>
    </div>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Назва товару
                    </th>
                    <th>
                        Ціна
                    </th>
                    <th>
                        Виробник
                    </th>
                    <th>
                        Об'єм
                    </th>                
                    <th>
                        Категорія товару
                    </th>
                    <th class="text-center">
                        Редагування
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="10%">@obj.ProductName</td>
                        <td width="10%">@obj.Price</td>
                        <td width="10%">@obj.Producer</td>
                        <td width="10%">@obj.Volume</td>
                        <td width="10%">@obj.ProductCategory.Name</td>                       
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i> &nbsp;
                                </a>
                                <a asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="fas fa-trash-alt"></i>

                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Товари тимчасово відсутні.</p>
    }
</div>

