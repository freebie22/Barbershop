@model Barbershop.Models.ViewModels.ProductsVM

<form method="post" enctype="multipart/form-data">
    <input asp-for="Product.Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Редагування товару</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Product.ProductName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Product.ProductName"  class="form-control mb-2" />
                        <span asp-validation-for="Product.ProductName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Product.Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Product.Price"  class="form-control mb-2" />
                        <span asp-validation-for="Product.Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Product.Producer"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Product.Producer" class="form-control mb-2" />
                        <span asp-validation-for="Product.Producer" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Product.Volume"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Product.Volume" class="form-control mb-2" />
                        <span asp-validation-for="Product.Volume" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Product.Consist"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Product.Consist"  class="form-control " />
                        <span asp-validation-for="Product.Consist" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Product.Description"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Product.Description"  class="form-control " />
                        <span asp-validation-for="Product.Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Product.Usage"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Product.Usage" class="form-control " />
                        <span asp-validation-for="Product.Usage" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row pt-2">
                        <div class="col">
                            <button type="submit" class="btn btn-danger w-100" value="Edit">Edit</button>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fa-solid fa-arrow-left"></i> Назад</a>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        Основне фото товару
                    </div>
                    <div class="col-8">
                        <input type="file" name="files1" id="uploadBox" accept=".png, .jpg, .jpeg" class="form-control mb-2" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        Додаткові фото товару
                    </div>
                    <div class="col-8">
                        <input type="file" name="files2" id="uploadBox" multiple accept=".png, .jpg, .jpeg" class="form-control mb-2" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Product.ProductCategoryId"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="Product.ProductCategoryId" asp-items="@Model.ProductCategorySelectList" class="form-control mb-2">
                            @*<select asp-for="CategoryId" asp-items="@ViewData["CategoryDropDown"] as IEnumerable<SelectListItem>" class="form-control mb-2">*@
                            <option disabled selected>--Оберіть категорію товару--</option>
                        </select>
                        <span asp-validation-for="Product.ProductCategoryId" class="text-danger"></span>
                    </div>
                </div>
            </div>
           
            <div class="col-4">
                <img src="@WC.ProductPath@Model.Product.ProductImage" width="100%" style="border-radius:5px; border:1px solid #bbb" />
            </div>
            @foreach (var image in Model.Images)
            {
                <div class="col-4">
                    <img src="@WC.GalleryPath@image.Image" width="100%" style="border-radius:5px; border:1px solid #bbb" />
                </div>
            }
        </div>
    </div>
    </div>
</form>