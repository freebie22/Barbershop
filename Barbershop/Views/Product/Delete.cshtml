@model Barbershop.Models.ViewModels.ProductsVM

<form method="post">
    <input asp-for="Product.Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Видалити товар</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Product.ProductName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Product.ProductName" disabled class="form-control mb-2" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Product.Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Product.Price" disabled class="form-control mb-2" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Product.Producer"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Product.Volume" disabled class="form-control mb-2" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Product.Consist"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Product.Consist" disabled class="form-control " />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Product.Description"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Product.Description" disabled class="form-control " />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Product.Usage"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Product.Usage" disabled class="form-control " />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row pt-2">
                        <div class="col">
                            <button type="submit" class="btn btn-danger w-100" value="Delete">Delete</button>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fa-solid fa-arrow-left"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                <img src="@WC.ProductPath@Model.Product.ProductImage" width="100%" style="border-radius:5px; border:1px solid #bbb" />
            </div>
            @foreach (var image in Model.Images)
            {
                <div class="col-4">
                    <img src="@WC.GalleryPath@image.Image" width="100%" style="border-radius:5px; border:1px solid #bbb" />
                </div>
            }
        </div>
    </div>
</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        $(document).ready(function () {
            $('.summernote').summernote({
                height: 250
                                disabled: true;
            });
        });
    </script>
}

