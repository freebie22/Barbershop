@model List<Barbershop.Models.Products>
@using Barbershop.Utility

@if (Model.Count() > 0)
{
    <form method="post">
        <br />
        <div class="backgroundWhiteBorder">
            <div class="container row">
                <div class="col -8">
                    <div class="card mt-4">
                        <div class="card-header bg-dark text-light ml-0 row container">
                            <div class="col-6">
                                <i class="fa fa-shopping-cart"></i> &nbsp;
                                Кошик
                            </div>
                            <div class="col-6 text-right">
                                <a asp-action="Index" asp-controller="Stock" class="btn btn-outline-info btn-sm">Продовжити покупки</a>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class=" d-none d-lg-block">
                                <div class="row" style="color:#821f3d">
                                    <div class="col-lg-2">
                                    </div>
                                    <div class="col-12 col-lg-3">
                                        Інформація про товар
                                    </div>
                                    <div class="col-12 col-lg-2">
                                        Ціна за шт.
                                    </div>
                                    <div class="col-6 col-lg-2">
                                        К-ть од. товару
                                    </div>
                                    <div class="col-6 col-lg-2">
                                        Загальна ціна
                                    </div>
                                    <div class="col-6 col-sm-4 col-lg-1">
                                    </div>
                                </div>
                            </div>

                            <hr />
                            @{                        
                                var orderTotal = 0.0m;
                            }
                            @for(int i =0; i < Model.Count(); i++)
                            {
                                <input type="hidden" asp-for="@Model[i].Id"/>
                                <div class="row h-100">
                                    <div class="col-4 col-md-2 text-center py-2">
                                        <img src="@WC.ProductPath@Model[i].ProductImage" class="rounded" width="100%" />
                                    </div>
                                    <div class="col-8 col-lg-3">
                                        <h5>@Model[i].ProductName</h5>
                                    </div>
                                    <div class="col-3 col-lg-2 pt-lg-4" style="font-size:11px;">
                                        <span style="font-size:17px;"> @Model[i].Price грн</span>/ за од.
                                    </div>
                                    <div class="col-4 col-lg-2 pt-lg-4" style="font-size:11px;">
                                        <input type="text" asp-for="@Model[i].TempCount" class="form-control" />
                                    </div>
                                    <div class="col-3 col-lg-2 pt-lg-4" style="font-size:11px;">
                                        <span style="font-size:17px;"> @(Model[i].Price * Model[i].TempCount) грн</span>
                                    </div>
                                    <div class="col-2 col-lg-1 p-0 pt-lg-4 text-center">
                                        <a asp-action="Remove" asp-route-id="@Model[i].Id" class="btn btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </div>
                                orderTotal += Model[i].Price * Model[i].TempCount;
                                <hr />
                            }
                            <div class="row">
                                <div class="col-12 text-right pr-4">
                                    Загальна ціна: @string.Format("{0:c}",orderTotal);
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="row">
                                <div class="col-6 col-md-3 offset-md-6">
                                    <input type="submit" asp-action="UpdateCart" formmethod="post" name="Update" value="Update Cart" class="btn btn-info form-control"/>
                                </div>
                                <div class="col-6 col-md-3">
                                    <button type="submit" class="btn btn-success form-control ">
                                        <span>Продовжити</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
}
else
{
    <p>Add items to shoppingCart</p>
}


