@model Barbershop.Models.Products
        <div class="col-lg-4 col-md-6 pb-4 filter @Model.ProductCategory.Name.Replace(' ', '_')">
            <!-- Card-->
            <div class=" bg-white shadow-sm">
                <div class="card-body px-3 pt-3 pb-1 row">
                    <div class="col-7"><label class="float-left">@Model.ProductName</label></div>
            <div class="col-5"><label class="float-right"><span class="text-info h5">@Model.ProductName</span></label> </div>
                </div>
                <img class="card-img-top img-fluid d-block mx-auto mb-3" src="@WC.ProductPath@Model.ProductImage" alt="Card image cap">
                <div class="col-12 p-1">
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-dark form-control btn-sm p-2" style="height:40px">Детальніше</a>
                </div>
                </div>
            </div>
        </div>
