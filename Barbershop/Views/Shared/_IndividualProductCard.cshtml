@model Barbershop.Models.Products

<style>
    .zoom{
        transition: transform .2s; 
    }
        .zoom:hover {
            transform: scale(1.2); 
        }
</style>

<div class="col-lg-4 col-md-6 pb-4 mt-3 filter @Model.ProductCategory.Name.Replace(' ', '_')">
    <div id="card product-card" class="card m-2" style="border: solid 1px #ffeba7; background-color:#1f2029">
        <div class="row g-0">
            <div class="col-md-5">
                <a asp-action="Details" asp-route-id="@Model.Id"><img src="@WC.ProductPath@Model.ProductImage" class="card-img-top h-100 img-fluid zoom" style="object-fit: cover; object-position: center;" alt="..."></a>               
            </div>
            <div class="col-md-7">
                <div class="card-body d-flex flex-column justify-content-between h-100">
                    <div>
                        <a asp-action="Details" asp-route-id="@Model.Id" style="text-decoration: none; color: #FFEBA7"><h5 class="card-title">@Model.ProductName</h5></a>                        
                        <p style="color:#ffeba7" class="card-text">Ціна: <span class="h5" style="color:#FFF">@Model.Price грн</span></p>
                    </div>
                    <div class="mt-3">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-dark" style="text-decoration: none; border-radius: 0px;">Детальніше</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
