<div class="col-lg-4 col-md-6 pb-4 mt-3 filter @Model.WorkPosition.PositionName.Replace(' ', '_')">
    <div class="card h-100" style="border: 1px solid #FFEBA7;">
        <div class="g-0">
            <div style="position: relative;">
                <a asp-action="Details" asp-route-id="@Model.Id">
                    <img src="@WC.BarberPath@Model.BarberImage" class="card-img-top h-100 img-fluid zoom" style="object-position: center; object-fit: cover;" alt="...">
                </a>
                <div style="position: absolute; bottom: 0; left: 0; padding: 10px; color: #FFEBA7; background-color: #1F2029">
                    @Model.WorkPosition.PositionName
                </div>
            </div>
            <div class="">
                <div class="card-body d-flex flex-column justify-content-between h-100">
                    <div>
                        <a asp-action="Details" asp-route-id="@Model.Id" style="text-decoration: none; color: #FFEBA7"><h5 class="card-title">@Model.FullName</h5></a>
                    </div>
                    <div class="mt-3">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-dark" style="text-decoration: none; border-radius: 0px;">Детальніше</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
