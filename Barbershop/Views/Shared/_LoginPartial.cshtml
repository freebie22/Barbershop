@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a style="color:white" id="manage" class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Привіт @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button style="color:white" id="logout" type="submit" class="nav-link btn btn-link border-0">Вийти</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a style="color:white" class="nav-link" id="login" asp-area="Identity" asp-page="/Account/Login">Увійти</a>
    </li>
    <li class="nav-item">
            <a style="color:white" class="nav-link " id="register" asp-area="Identity" asp-page="/Account/Register">Зареєструватись</a>
    </li>
}
</ul>
