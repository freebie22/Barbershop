@model List<Barbershop.Models.BarbershopUser>


<h2 class="text-dark">Перелік барберів</h2>
<div class="container p-5">
    <div class="row pt-4">
        <div class="col-6">
        </div>
    </div>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered" style="width:100%; font-size:16px">
            <thead>
                <tr>
                    <th class="text-center">
                        Ідентифікатор користувача
                    </th>
                    <th class="text-center">
                        Псевдонім
                    </th>
                    <th class="text-center">
                        Електронна пошта
                    </th>
                    <th class="text-center">
                        Чи підтверджена електронна пошта
                    </th>
                    <th class="text-center">
                        Номер телефону
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td class="text-center" width="35%"><strong>@obj.Id</strong></td>
                        <td class="text-center" width="10%"><strong>@obj.UserName</strong></td>
                        <td class="text-center" width="35%"><strong>@obj.Email</strong></td>
                        <td class="text-center" width="10%">
                            <strong>
                                @if (@obj.EmailConfirmed)
                                {
                                    <span>Так</span>
                                }
                                else
                                {
                                    <span>Ні</span>
                                }
                            </strong>
                        </td>
                        <td class="text-center" width="10%"><strong>@obj.PhoneNumber</strong></td>
                        @*<td wdith="35%" class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="WorkPositions" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i> &nbsp;
                                </a>
                                <a asp-controller="WorkPositions" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="fas fa-trash-alt"></i>

                                </a>
                            </div>
                        </td>*@
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Користувачі тимчасово відсутні.</p>
    }
</div>

