@{
    Layout = null;
}
@model Barbershop.Models.ViewModels.OrderListVM


<link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/material.css" />
<div>
    <form method="get" >
        <div class="container p-4 my-3">
            <div class="border bg-white p-3" style="border-radius:15px">
                <div class="col-12">
                    <div class="row" style="padding-top:10px">
                        <div class="col-4">
                            @Html.Editor("searchId", new { htmlAttributes = new {@class ="form-control", place="ID..."}})
                        </div>
                        <div class="col-4">
                            @Html.Editor("searchEmail", new { htmlAttributes = new {@class ="form-control", place="Email..."}})
                        </div>
                        <div class="col-4">
                            @Html.Editor("searchPhone", new { htmlAttributes = new {@class ="form-control", place="Phone..."}})
                        </div>
                        <div class="row">
                            <div class="col-4">
                                @Html.DropDownListFor(u=>u.Status, Model.StatusList,"--Статус замовлення--", new {@class = "form-select"})
                            </div>
                            <div class="offset-4 col-4">
                                <button type="submit" class="h-100 btn btn-info form-control" id="search-button" >
                                    <i class="fa fa-search"></i>Пошук
                                    </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
<hr>
<div class="bg-white p-3">
    <ejs-grid id="Grid" dataSource="@Model.OrderHList" allowFiltering="true" allowSorting="true" allowPaging="true">
        <e-grid-filtersettings type="Menu"></e-grid-filtersettings>
        <e-grid-loadingIndicator indicatorType="Shimmer"></e-grid-loadingIndicator>
        <e-grid-pagesettings pageSize="5"></e-grid-pagesettings>
        <e-grid-columns>
            <e-grid-column field="Id" headerText="№ замовлення" isPrimaryKey="true" textAlign="Right" width="100" template="<a href='#' class='order-details-link'>${Id}</a>"></e-grid-column>
            <e-grid-column field="OrderDate" headerText="Дата замовлення" customFormat="@(new {type="date", format="dd/MM/yyyy"})" textAlign="Right"></e-grid-column>
            <e-grid-column field="OrderStatus" headerText="Статус замовлення" textAlign="Right"></e-grid-column>
            <e-grid-column field="FinalOrderTotal" headerText="Сума замовлення, ₴" textAlign="Right"></e-grid-column>            
            <e-grid-column field="Id" headerText="" width="70" template="<a rel='nofollow' href='#' class='btn btn-primary order-details-link'><i class='fas fa-list'><span style='display: none;'>${Id}</span></i></a>"></e-grid-column>
        </e-grid-columns>
    </ejs-grid>
</div>

<script src="https://cdn.syncfusion.com/ej2/dist/ej2.min.js"></script>

<ejs-scripts></ejs-scripts>
<script>
    $(document).ready(function() {
        var form = $('form');
        $('#Grid').on('click', '.order-details-link', function(event) {
            event.preventDefault();
            var orderId = $(this).text();
            $.ajax({
                type: "GET",
                url: "/Order/UserDetails/" + orderId, 
                success: function(html) {
                    $('#Grid').html(html);
                    form.hide();
                }
            });
        });
    });
</script>
