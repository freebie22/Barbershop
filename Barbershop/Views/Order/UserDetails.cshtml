@{
    Layout = null;
}
@model Barbershop.Models.ViewModels.OrderVM

<form method="post">
    <input asp-for="OrderHeader.Id" hidden />
    <br />
    <div class="backgroundWhite container">
        <div class="card" style="border: 0px">
            <div class="card-header bg-dark text-light ml-0 row container">
                <div class="col-12 d-none d-md-block col-md-6 pb-1" style="font-size:20px;">
                    <i class="fas fa-shopping-cart"></i> &nbsp; Замовлення №@Model.OrderHeader.Id
                </div>
                <div class="col-12 col-md-4 offset-md-2 text-right">
                    <button id="ordersButton" class="btn btn-outline-info form-control btn-sm">До замовлень</button>
                </div>
            </div>
            <div class="card-body pb-0" style="word-wrap: unset">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-6 pb-4">
                            <div class="row">
                                <h4 class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="text-dark">Деталі замовлення:</span>
                                </h4>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Ім'я та прізвище</div>
                                <div class="col-9" style="font-size:10px;">
                                    <input asp-for="OrderHeader.FullName" readonly type="text" class="form-control" />
                                    <span asp-validation-for="OrderHeader.FullName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Ном.телефону</div>
                                <div class="col-9">

                                    <input asp-for="OrderHeader.PhoneNumber" readonly type="text" class="form-control" />
                                    <span asp-validation-for="OrderHeader.PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Область</div>
                                <div class="col-9">

                                    <input asp-for="OrderHeader.Region" type="text" readonly class="form-control" />
                                    <span asp-validation-for="OrderHeader.Region" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Місто</div>
                                <div class="col-9">

                                    <input asp-for="OrderHeader.City" type="text" readonly class="form-control" />
                                    <span asp-validation-for="OrderHeader.City" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Адреса доставки</div>
                                <div class="col-9">

                                    <input asp-for="OrderHeader.PostOffice" type="text" readonly class="form-control" />
                                    <span asp-validation-for="OrderHeader.PostOffice" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">E-Mail</div>
                                <div class="col-9">
                                    <input asp-for="OrderHeader.Email" type="text" readonly class="form-control" />
                                    <span asp-validation-for="OrderHeader.Email" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Дата замовлення</div>
                                <div class="col-9">

                                    <input value="@Model.OrderHeader.OrderDate.ToShortDateString()" type="text" class="form-control" readonly />

                                </div>
                            </div>
                            @if (Model.OrderHeader.OrderStatus == WC.StatusReceived || Model.OrderHeader.OrderStatus == WC.StatusArrived)
                            {
                                <div class="row my-1">
                                    <div class="col-3">Дата доставки</div>
                                    <div class="col-9">
                                        <input value="@Model.OrderHeader.ShippingDate.ToShortDateString()" id="shippingDate" type="text" readonly class="form-control" />
                                    </div>
                                </div>
                            }
                            @if(Model.OrderHeader.OrderStatus == WC.StatusReceived)
                            {
                                <div class="row my-1">
                                    <div class="col-3">Дата отримання</div>
                                    <div class="col-9">
                                        <input value="@Model.OrderHeader.ReceivingDate.ToShortDateString()" id="receivingDate" type="text" readonly class="form-control" />
                                    </div>
                                </div>
                            }                                                      
                            <div class="row my-1">
                                <div class="col-3">Статус замовлення</div>
                                <div class="col-9">
                                    <input asp-for="OrderHeader.OrderStatus" type="text" readonly class="form-control" />
                                </div>
                            </div>                        
                        </div>
                        <div class="col-12 col-lg-5 offset-lg-1">
                            <h4 class="d-flex justify-content-between align-items-center mb-3">
                                <span class="text-dark">Підсумок по замовленню</span>
                            </h4>
                            <ul class="list-group mb-3">
                                @foreach (var detail in Model.OrderDetail)
                                {
                                    <li class="list-group-item d-flex justify-content-between p-2">
                                        <div class="row container">
                                            <div class="col-8">
                                                <a asp-action="Details" asp-controller="Stock" asp-route-Id="@detail.Product.Id" style="text-decoration: none" class="my-0 text-info">@detail.Product.ProductName</a>
                                                <small class="text-muted">Ціна за од. : @detail.PricePerOne</small><br />
                                                <small class="text-muted">Кількість : @detail.Count</small>
                                            </div>
                                            <div class="col-4">
                                                <p class="text-success">@(detail.PricePerOne * detail.Count) грн</p>
                                            </div>
                                        </div>
                                    </li>
                                }
                                <li class="list-group-item bg-info">
                                    <div class="row container">
                                        <div class="col-6">
                                            <h5 class="text-white">Ціна до сплати</h5>
                                        </div>
                                        <div class="col-6 text-right">
                                            <h5 class="text-white">@(Model.OrderHeader.FinalOrderTotal) грн</h5>
                                        </div>
                                    </div>
                                </li>

                            </ul>
                          <br />                           
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            var shippingDate = document.getElementById("shippingDate");
            if (shippingDate.value == '1/1/0001') {
                shippingDate.value = "";
            }
        })
    </script>
    <script>
        $(document).ready(function () {
            $('#ordersButton').click(function (event) {
                $.ajax({
                    type: "GET",
                    url: "/Order/IndexUser",
                    success: function (html) {
                        $('#orderList').html(html);
                    }
                });
            });
        });
    </script>

}@*
