@model Barbershop.Models.ViewModels.OrderVM

<form method="post">
    <input asp-for="OrderHeader.Id" hidden />
    <br />
    <div class="backgroundWhite container">
        <div class="card">
            <div class="card-header bg-dark text-light ml-0 row container">
                <div class="col-12 d-none d-md-block col-md-6 pb-1">
                    <i class="fas fa-shopping-cart"></i> &nbsp; Order Summary
                </div>
                <div class="col-12 col-md-4 offset-md-2 text-right">
                    <a asp-controller="Order" asp-action="Index" class="btn btn-outline-info form-control btn-sm">Back to Orders</a>
                </div>
            </div>
            <div class="card-body pb-0">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-6 pb-4">
                            <div class="row">
                                <h4 class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="text-info">Деталі замовлення:</span>
                                </h4>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Клієнт</div>
                                <div class="col-9">
                                    <input asp-for="OrderHeader.FullName" readonly type="text" class="form-control" />
                                    <span asp-validation-for="OrderHeader.FullName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Тел.</div>
                                <div class="col-9">

                                    <input asp-for="OrderHeader.PhoneNumber" readonly type="text" class="form-control" />
                                    <span asp-validation-for="OrderHeader.PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Обл.</div>
                                <div class="col-9">

                                    <input asp-for="OrderHeader.Region" type="text" readonly class="form-control" />
                                    <span asp-validation-for="OrderHeader.Region" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Місто</div>
                                <div class="col-9">

                                    <input asp-for="OrderHeader.City" type="text" readonly class="form-control" />
                                    <span asp-validation-for="OrderHeader.City" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Відділ</div>
                                <div class="col-9">

                                    <input asp-for="OrderHeader.PostOffice" type="text" readonly class="form-control" />
                                    <span asp-validation-for="OrderHeader.PostOffice" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">E-Mail</div>
                                <div class="col-9">
                                    <input asp-for="OrderHeader.Email" type="text" readonly class="form-control" />
                                    <span asp-validation-for="OrderHeader.Email" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Дат.зам.</div>
                                <div class="col-9">

                                    <input value="@Model.OrderHeader.OrderDate.ToShortDateString()" type="text" class="form-control" readonly />

                                </div>
                            </div>

                            <div class="row my-1">
                                <div class="col-3">Дат.приб.</div>
                                <div class="col-9">
                                    <input value="@Model.OrderHeader.ShippingDate.ToShortDateString()" id="shippingDate" type="text" readonly class="form-control" />
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Дат.отр.</div>
                                <div class="col-9">
                                    <input value="@Model.OrderHeader.ReceivingDate.ToShortDateString()" id="receivingDate" type="text" readonly class="form-control" />
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Транзакція</div>
                                <div class="col-9">
                                    <input asp-for="OrderHeader.TransactionId" type="text" readonly class="form-control" />
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Стат.зам.</div>
                                <div class="col-9">
                                    <input asp-for="OrderHeader.OrderStatus" type="text" readonly class="form-control" />
                                </div>
                            </div>                        
                        </div>
                        <div class="col-12 col-lg-5 offset-lg-1">
                            <h4 class="d-flex justify-content-between align-items-center mb-3">
                                <span class="text-info">Підсумок по замовленню</span>
                            </h4>
                            <ul class="list-group mb-3">
                                @foreach (var detail in Model.OrderDetail)
                                {
                                    <li class="list-group-item d-flex justify-content-between p-2">
                                        <div class="row container">
                                            <div class="col-8">
                                                <h6 class="my-0 text-info">@detail.Product.ProductName</h6>
                                                <small class="text-muted">Ціна за од. : @detail.PricePerOne</small><br />
                                                <small class="text-muted">Кількість : @detail.Count</small>
                                            </div>
                                            <div class="col-4">
                                                <p class="text-success">@(detail.PricePerOne * detail.Count) грн</p>
                                            </div>
                                        </div>
                                    </li>
                                }
                                <li class="list-group-item bg-info">
                                    <div class="row container">
                                        <div class="col-6">
                                            <h5 class="text-white">Ціна до сплати</h5>
                                        </div>
                                        <div class="col-6 text-right">
                                            <h5 class="text-white">@(Model.OrderHeader.FinalOrderTotal) грн</h5>
                                        </div>
                                    </div>
                                </li>

                            </ul>


                          <br />

                            @if (Model.OrderHeader.OrderStatus == Barbershop.WC.StatusApproved)
                            {
                                <input type="submit" value="В обробку"
                                   formmethod="post" asp-action="StartProcessing"
                                   class="btn btn-info form-control" />
                            }
                            @if (Model.OrderHeader.OrderStatus == Barbershop.WC.StatusInProcess)
                            {
                                <input type="submit" value="Замовлення прибуло"
                                   formmethod="post" asp-action="ShipOrder"
                                   class="btn btn-primary form-control" />
                            }
                            @if (Model.OrderHeader.OrderStatus == Barbershop.WC.StatusArrived)
                            {
                                <input type="submit" value="Замовлення отримане"
                                   formmethod="post" asp-action="ReceiveOrder"
                                   class="btn btn-primary form-control" />
                            }
                            @if (Model.OrderHeader.OrderStatus != Barbershop.WC.StatusReturned
                            && Model.OrderHeader.OrderStatus != Barbershop.WC.StatusCancelled && Model.OrderHeader.OrderStatus != Barbershop.WC.StatusReceived)
                            {
                                <div class="pt-2">
                                    <button type="submit"
                                        class="btn btn-danger form-control"
                                        asp-action="CancelOrder"
                                        formmethod="post">
                                        Відмінити замовлення
                                    </button>
                                </div>
                            }
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            var shippingDate = $("#shippingDate");
            if (shippingDate.val() == '1/1/0001') {
                shippingDate.val() = "";
            }
        })
    </script>

