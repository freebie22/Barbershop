@model IEnumerable<Barbershop.Models.Services>
@using Microsoft.AspNetCore.Identity

@inject UserManager<IdentityUser> userManager

@{
    var today = DateTime.Today;
    var userDiscount = 0.0;
    if (User.Identity.IsAuthenticated)
    {
        var user = await userManager.GetUserAsync(User);
        var barbershopUser = (BarbershopUser)user;
        if (barbershopUser != null && barbershopUser.DateOfBirth.Day == today.Day && barbershopUser.DateOfBirth.Month == today.Month)
        {
            userDiscount = 0.2; 
        }
    }
}

<h2 class="text-dark">Ціни на послуги</h2>
<div class="row pt-4">
    @if(User.Identity.IsAuthenticated)
    {
        var user = await userManager.GetUserAsync(User);
        var barbershopUser = (BarbershopUser)user;
        if (barbershopUser != null && barbershopUser.DateOfBirth.Day == today.Day && barbershopUser.DateOfBirth.Month == today.Month)
        {
            <p class="text-danger">Вітаємо Вас з днем народження! З цього приводу ви отримуєте знижку 20% на всі типи послуг!</p>
        }
    }

</div>
<div class="container p-5">
    <div class="row pt-4">
        <div class="col-6">
        </div>
        @if(User.IsInRole(WC.AdminRole))
        {
            <div class="col-6 text-end">
                <a asp-controller="Services" asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> &nbsp; Додати нову послугу
                </a>
            </div>
        }
        
    </div>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered" style="width:100%; font-size:16px">
            <thead >
                <tr>
                    <th>
                        Назва послуги
                    </th>
                    <th>
                        Стажер
                    </th>
                    <th>
                        Барбер
                    </th>
                    <th>
                        Топ-барбер
                    </th>
                    @if (User.IsInRole(WC.AdminRole))
                    {
                        <th class="text-center">
                            Редагування
                        </th>
                    }
                </tr>
            </thead>
            <tbody >
                @if(User.Identity.IsAuthenticated)
                {
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td width="35%"><strong>@obj.serviceName</strong></td>
                            <td width="10%"><span style="text-decoration: line-through;">@obj.traineePrice&nbsp;</span><strong>@(obj.traineePrice - (obj.traineePrice * userDiscount))</strong></td>
                            <td width="10%"><span style="text-decoration: line-through;">@obj.barberPrice&nbsp;</span><strong>@(obj.barberPrice - (obj.barberPrice * userDiscount))</strong> </td>
                            <td width="10%"><span style="text-decoration: line-through;">@obj.seniorPrice&nbsp;</span><strong>@(obj.seniorPrice - (obj.seniorPrice * userDiscount))</strong></td>
                            @if (User.IsInRole(WC.AdminRole))
                            {
                                <td wdith="35%" class="text-center">
                                    <div class="w-75 btn-group" role="group">
                                        <a asp-controller="Services" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                            <i class="fas fa-edit"></i> &nbsp;
                                        </a>
                                        <a asp-controller="Services" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                            <i class="fas fa-trash-alt"></i>

                                        </a>
                                    </div>
                                </td>
                            }
                        </tr>
                    }
                }
                else
                {
                     @foreach (var obj in Model)
                {
                    <tr>
                        <td width="35%"><strong>@obj.serviceName</strong></td>
                        <td width="10%"><strong>@obj.traineePrice</strong></td>
                        <td width="10%"><strong>@obj.barberPrice</strong></td>
                        <td width="10%"><strong>@obj.seniorPrice</strong></td>
                        @if(User.IsInRole(WC.AdminRole))
                        {
                            <td wdith="35%" class="text-center">
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="Services" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                        <i class="fas fa-edit"></i> &nbsp;
                                    </a>
                                    <a asp-controller="Services" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                        <i class="fas fa-trash-alt"></i>

                                    </a>
                                </div>
                            </td>
                        }          
                    </tr>
                }
                }
               
            </tbody>
        </table>
    }
    else
    {
        <p>Послуги тимчасово відсутні.</p>
    }
</div>

