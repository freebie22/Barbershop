@model Barbershop.Models.Services

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Змінити інформацію про послуги</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="serviceName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="serviceName" class="form-control" />
                        <span asp-validation-for="serviceName" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row pt-2">
                    <div class="col-4">
                        <label asp-for="traineePrice"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="traineePrice" class="form-control" />
                        <span asp-validation-for="traineePrice" class="text-danger"></span>
                    </div>
                </div>
                 <div class="form-group row pt-2">
                    <div class="col-4">
                        <label asp-for="barberPrice"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="barberPrice" class="form-control" />
                        <span asp-validation-for="barberPrice" class="text-danger"></span>
                    </div>
                </div>
                 <div class="form-group row pt-2">
                    <div class="col-4">
                        <label asp-for="seniorPrice"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="seniorPrice" class="form-control" />
                        <span asp-validation-for="seniorPrice" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row pt-3">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Оновити" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">
                                <i class="fas fa-sign-out-alt"></i> До послуг
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}
