@model Barbershop.Models.Services

<form method="post" asp-action="Create">
    <div class="p-3" style="border:1px solid #FFEBA7; background-color: #1F2029">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="pl-3 text-center" style="color: #FFEBA7">Додати послугу</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label style="color: #FFEBA7">Назва послуги</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="serviceName" class="form-control" />
                        <span asp-validation-for="serviceName" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row pt-2">
                    <div class="col-4">
                        <label style="color: #FFEBA7" asp-for="traineePrice"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="traineePrice" class="form-control" />
                        <span asp-validation-for="traineePrice" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row pt-2">
                    <div class="col-4">
                        <label style="color: #FFEBA7" asp-for="barberPrice"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="barberPrice" class="form-control" />
                        <span asp-validation-for="barberPrice" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row pt-2">
                    <div class="col-4">
                        <label style="color: #FFEBA7" asp-for="seniorPrice"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="seniorPrice" class="form-control" />
                        <span asp-validation-for="seniorPrice" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row pt-2">
                    <div class="col-4">
                        <label style="color: #FFEBA7" asp-for="Duration"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Duration" class="form-control" />
                        <span asp-validation-for="Duration" class="text-danger"></span>
                    </div>
                </div>
                
            </div>
        </div>
        <div class="form-group row pt-3">
            <div class="row">
                <div class="col">
                    <input type="submit" class="btn btn-info w-100" value="Додати" />
                </div>
                <div class="col">
                    <a asp-action="Index" class="btn btn-success w-100">
                        <i class="fas fa-sign-out-alt"></i> До переліку
                    </a>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts{
    @{
            <partial name="_ValidationScriptsPartial"></partial>
    }
}
