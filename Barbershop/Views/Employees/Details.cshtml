@model Barbershop.Models.ViewModels.DetailsVM
<div class="">
    <form method="post">
        <input asp-for="@Model.Barbers.Id" hidden></input>
        <div class="container backgroundWhite pt-4">
            <div class="card">
                <div class="card-header bg-dark text-light d-flex justify-content-between" style="border-radius: 0px;">
                    <div class="col-12 col-md-6">
                        <h1 class="text-white">@Model.Barbers.FullName</h1>
                    </div>
                    <div class="col-12 col-md-6 text-right">
                        <h1 class="text-warning"> @Model.Barbers.WorkPosition.PositionName</h1>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-4 p-1 text-center">
                                <img src="@WC.BarberPath@Model.Barbers.BarberImage" width="100%" class="rounded" />
                            </div>
                            <div class="col-12 col-lg-8">
                                <div class="pl-3">

                                    <div class="col-12">
                                        <span class="badge p-3 border" style="background-color:lavenderblush;color:black">@Model.Barbers.WorkPosition.PositionName</span>
                                        @foreach(var spec in Model.Barbers.Specializations)
                                        {
                                            <span class="badge p-3 border" style="background-color:azure;color:black">@spec.SpecName</span>
                                        }
                                       
                                        <h3 class="text-success"></h3>

                                        <p class="text-secondary">@Html.Raw(Model.Barbers.Description)</p>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-dark">
                    <div class="row">
                        <div class="col-12 col-md-6 pb-1 ">
                            <a asp-action="Index" class="btn btn-success btn-square form-control btn-lg" style="height:50px;">Назад до переліку</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>