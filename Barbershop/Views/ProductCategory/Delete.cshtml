@model Barbershop.Models.ProductCategory
<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="p-3" style="background-color: #1F2029; border: solid 1px #FFEBA7; margin-bottom: 30px">
        <div class="form-group row">
            <h2 class="text-center pl-3" style="color:#FFEBA7">Видалення категорії</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label style="color: #FFEBA7" asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" disabled class="form-control" />
                    </div>

                </div>
                
            </div>
        </div>
        <div class="form-group row pt-3">
            <div class="row">

                <div class="col">
                    <input type="submit" class="btn btn-danger w-100" value="Видалити" />
                </div>
                <div class="col">
                    <a asp-action="Index" class="btn btn-success w-100">
                        Повернутись до посад
                    </a>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}
