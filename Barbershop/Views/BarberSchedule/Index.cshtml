@model List<Barbershop.Models.BarberSchedule>

<style>
    .table-responsive {
        max-width: 100%;
        overflow-x: auto;
    }
</style>
<form method="get">
    <div class="container p-5" style="background-color: #1F2029; margin-bottom: 30px">

        @if(User.IsInRole(WC.AdminRole))
        {
            <h2 class="text-center" style="color: #FFEBA7">Розклад роботи барберів</h2>
            <div class="col-4 d-lfex justify-content-center align-items-center">
            @Html.Editor("searchName", new { htmlAttributes = new {@class ="form-control", placeholder="Введіть ім'я барбера для пошуку розкладу"}})
            <button type="submit" class="btn btn-info mt-1 mb-2 form-control">
                <i class="fa fa-search"></i>Пошук
            </button>
            </div>
        }
        else
        {
            <h2 class="text-center" style="color: #FFEBA7">Мій графік роботи</h2>
        }

        @if (User.IsInRole(WC.AdminRole))
        {
            <div class="row pt-4 pb-4 text-center">
                <div>
                <a asp-action="Create" class="btn btn-primary">
                    Створити новий розклад
                </a>
            </div>
        </div>
        }
        @if (Model.Count() > 0)
        {
            <div class="table-responsive">
                <table class="table table-bordered" style="width:100%; font-size:16px; border-color: #ffeba7">
                    <thead>
                        <tr>
                            <th style="color: #FFEBA7" class="text-center">
                                Ім'я барбера
                            </th>
                            <th style="color: #FFEBA7" class="text-center">
                                Розклад на дату
                            </th>
                            <th style="color: #FFEBA7" class="text-center">
                                Початок робочого дня
                            </th>
                            <th style="color: #FFEBA7" class="text-center">
                                Кінець робочого дня
                            </th>
                            @if (User.IsInRole(WC.AdminRole))
                            {
                                <th style="color: #FFEBA7" class="text-center">
                                    Редагування
                                </th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var obj in Model)
                        {
                            <tr>
                                <td class="text-center" width="35%"><strong style="color: #FFEBA7">@obj.Barber.FullName</strong></td>
                                <td class="text-center" width="10%"><strong style="color: #FFEBA7">@obj.Date.ToShortDateString()</strong></td>
                                <td class="text-center" width="10%"><strong style="color: #FFEBA7">@obj.StartTime</strong></td>
                                <td class="text-center" width="10%"><strong style="color: #FFEBA7">@obj.EndTime</strong></td>
                                @if (User.IsInRole(WC.AdminRole))
                                {
                                    <td wdith="35%" class="text-center">
                                        <div class="w-75 btn-group" role="group">
                                            <a asp-controller="BarberSchedule" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                                <i class="fas fa-edit"></i> &nbsp;
                                            </a>
                                            <a asp-controller="BarberSchedule" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-primary mx-2">
                                                <i class="fas fa-trash-alt"></i> &nbsp;
                                            </a>
                                        </div>
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        }
        else
        {
            <h2 class="text-center" style="color: #FFEBA7">Розклад тимчасово відсутній.</h2>
        }
    </div>
</form>


