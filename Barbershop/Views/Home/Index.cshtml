@{
    ViewData["Title"] = "Barbershop Oasis";
}
<style>
    /* the slides */
    .slick-slide {
        margin-left: 27px;
    }

    /* the parent */
    .slick-list {
        margin-left: -27px;
    }

    .first-container{
        opacity: 0;
        transform: translate3d(-50px, 0, 0);
        transition: 0.7s all ease-in-out;
    }

    .second-container {
        opacity: 0;
        transform: translate3d(50px, 0, 0);
        transition: 0.7s all ease-in-out;
    }

    .third-container {
        opacity: 0;
        transform: translate3d(-50px, 0, 0);
        transition: 0.7s all ease-in-out;
    }

    .fourth-container {
        opacity: 0;
        transform: translate3d(50px, 0, 0);
        transition: 0.7s all ease-in-out;
    }

    .show{
        opacity: 1;
        transform: translate3d(0, 0, 0);
    }
</style>
