@model Barbershop.Models.ViewModels.StockVM

@{
    var productsCount = Model.Products.Count();
}

<style>
    .filter-button {
        opacity: 0;
        transform: translate3d(-50px, 0, 0); /* ADDED - start x position as -50px */
        transition: 0.7s all ease-in-out;
    }

    .product-card {
        opacity: 0;
        transform: translate3d(-50px, 0, 0); /* ADDED - start x position as -50px */
        cursor: pointer;
        transition: 0.7s all ease-in-out;
    }


    .show {
        opacity: 1;
        transform: translate3d(0, 0, 0);
    }
</style>

<div class="container" style="margin-bottom: 30px">
    <div class="text-center">
        <button class="btn btn-dark filter-button m-2" data-filter="all">Всі товари</button>
        @foreach (var obj in Model.Categories)
        {
            <button class="btn btn-outline-secondary m-2 filter-button" data-filter="@obj.Name.Replace(' ','_')">
                @obj.Name
            </button>
        }
        <br/>
        <div id="productContainer" class="d-flex flex-wrap">
            @if (productsCount > 0) 
        {
            @for (int i = 0; i < productsCount; i++)
            {
                var product = Model.Products.ElementAt(i);
                <partial name="_IndividualProductCard" model="product"></partial>
                @if ((i + 1) % 3 == 0 && i != productsCount - 1) 
                {
                    <div class="w-100"></div> 
                }
            }
        }
        else
        {
            <p>No products available.</p>
        }
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $(".filter-button").click(function () {

                var value = $(this).attr('data-filter');
                if (value == "all") {
                    $('.filter').show('1000');
                }
                else {
                    $(".filter").not('.' + value).hide('3000');
                    $('.filter').filter('.' + value).show('3000');

                }
            });

        });
    </script>
    <script>
        $(document).ready(function () {
                var $productCards = $('.product-card');
                    $productCards.addClass('show');
                    $('.filter-button').addClass('show');
            });
        </script>
}
