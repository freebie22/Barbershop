@model Barbershop.Models.ViewModels.NewsVM

@using Microsoft.AspNetCore.Identity

@inject UserManager<IdentityUser> UserManager

<form method="post" enctype="multipart/form-data">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Додати публікацію</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label>Заголовок</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="News.Title" class="form-control mb-2" />
                        <span asp-validation-for="News.Title" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label>Короткий вміст</label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="News.ShortDescription" class="form-control mb-2" ></textarea>>
                        <span asp-validation-for="News.ShortDescription" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label>Вміст публікації</label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="News.Description" class="form-control mb-2" ></textarea>>
                        <span asp-validation-for="News.Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label>Категорія</label>
                    </div>
                    <div class="col-8">
                        <select asp-for="News.Category" class="form-select mb-2" >
                            <option value="Загальна інформація">Загальна інформація</option>
                            <option value="Про товари">Товари</option>
                            <option value="Про барберів">Барбери</option>
                            <option value="Інтерв'ю">Інтерв'ю</option>
                            <option value="Акції">Акції</option>
                            <option value="Поради та стиль">Поради та стиль</option>
                        </select>
                        <span asp-validation-for="News.Category" class="text-danger"></span>
                    </div>
                </div>               
                <div class="form-group row">
                    <div class="col-4">
                        Основне фото публікації
                    </div>
                    <div class="col-8">
                        <input type="file" name="files1" id="uploadBox" accept=".png, .jpg, .jpeg" class="form-control mb-2" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        Додаткові фото публікації
                    </div>
                    <div class="col-8">
                        <input type="file" name="files2" id="uploadBox" multiple accept=".png, .jpg, .jpeg" class="form-control mb-2" />
                    </div>
                </div>  
                <div class="form-group row">
                    <div class="col-4">
                        <label>Посилання на відео</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="News.VideoUrl" class="form-control mb-2" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" onclick="return validateInput()" class="btn btn-primary w-100 text-white" value="Опублікувати" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">До публікацій</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


