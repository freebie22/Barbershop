@model IEnumerable<Barbershop.Models.Barbers>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Перелік барберів</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Додати нового барбера
            </a>
        </div>
    </div>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Ім'я та прізвище
                    </th>
                    <th>
                        Номер телефону
                    </th>
                    <th>
                        Стаж роботи (років)
                    </th>
                    <th>
                        Посада
                    </th>
                    <th class="text-center">
                        Спеціалізація
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="30%">@obj.FullName</td>
                        <td width="20%">@obj.PhoneNumber</td>
                        <td width="5%">@obj.Exprerience</td>
                        <td width="15%">@obj.WorkPosition.PositionName</td>
                        <td wdith="30%">
                            <ul>
                                @foreach (var specialization in obj.Specializations)
                                {
                                    <p>@specialization.SpecName</p>
                                }
                            </ul>
                        </td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i> &nbsp;
                                </a>
                                <a asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="fas fa-trash-alt"></i>

                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Барбери тимчасово відсутні.</p>
    }
</div>

