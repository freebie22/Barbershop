@model IEnumerable<Barbershop.Models.Specializations>

<div class="container p-5" style="background-color: #1F2029">
    <h2 class="text-center" style="color: #FFEBA7">Спеціалізації</h2>
    <div class="row pt-3">
        <div class="text-center mb-3">
            <a asp-controller="Specializations" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Додати нову спеціалізацію
            </a>
        </div>
    </div>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-responsive" style="width:100%; font-size:16px; border-color: #FFEBA7">
            <thead>
                <tr>
                    <th style="color:#FFEBA7">
                        Назва спеціалізації
                    </th>
                    <th style="color:#FFEBA7" class="text-center">
                        Редагування
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="40%"><strong style="color:#FFEBA7">@obj.SpecName</strong></td>
                        <td wdith="30%" class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Specializations" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i> &nbsp;
                                </a>
                                <a asp-controller="Specializations" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h1 class="text-center" style="color:#FFEBA7">Спеціалізації тимчасово відсутні.</h1>
    }
</div>

