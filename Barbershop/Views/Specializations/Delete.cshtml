@model Barbershop.Models.Specializations

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Видалити спеціалізацію</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="SpecName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="SpecName" disabled class="form-control mb-2" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row pt-2">
                        <div class="col">
                            <button type="submit" class="btn btn-danger w-100" value="Delete">Видалити</button>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fa-solid fa-arrow-left"></i> До переліку</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                <img src="@WC.SpecPath@Model.SpecImage" width="100%"/>
            </div>
        </div>
    </div>
</form>

