@model Barbershop.Models.Specializations

<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="border p-3">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3 text-center">Додати спеціалізацію</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="SpecName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="SpecName" class="form-control" />
                        <span asp-validation-for="SpecName" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row mt-2">
                    <div class="col-4">
                        Зображення спеціалізації
                    </div>
                    <div class="col-8">
                        <input type="file" name="files" id="uploadBox" width="128px" height="128px" multiple class="form-control mb-2" />
                    </div>
                </div>
                <div class="form-group row pt-3">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Додати" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">
                                <i class="fas fa-sign-out-alt"></i> До переліку
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}
