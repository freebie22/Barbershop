@page
@model LoginModel

@{
    ViewData["Title"] = "Вхід в обліковий запис";
}

<link rel="stylesheet" type="text/css" href="~/css/login_register.css" />


<form method="post">
    <section class="gradient-custom">
        <div class="container py-5">
            <div class="row d-flex justify-content-center align-items-center">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card bg-dark text-white" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">

                            <div class="mb-md-5 mt-md-4 pb-5">

                                <h2 class="fw-bold mb-2" style="color:#FFEBA7">Вхід в обліковий заис</h2>
                                <h5 class="mb-5" style="color:#FFEBA7">Введіть Ваш логін або e-mail та пароль.</h5>

                                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                                <div class="form-floating mb-3">
                                    <input asp-for="Input.UserName" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                    <label style="color: black" asp-for="Input.UserName" class="form-label">Логін або E-Mail</label>
                                    <span asp-validation-for="Input.UserName" class="text-danger mt-2"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                                    <label style="color: black" asp-for="Input.Password" class="form-label">Пароль</label>
                                    <span asp-validation-for="Input.Password" class="text-danger mt-2"></span>
                                </div>

                                <div class="mb-3">
                                    <div class="form-check form-check-inline">
                                        <input type="checkbox" asp-for="Input.RememberMe" class="form-check-input" />
                                        <label style="color:#FFEBA7" asp-for="Input.RememberMe" class="form-check-label">Запам'ятати мене?</label>
                                    </div>
                                </div>

                                <button id="login-submit" class="btn btn-outline-light btn-lg px-5" type="submit">Увійти</button>

                                <h6 class="mb-5 mt-2 pb-lg-2"><a style="text-decoration: none; color:#FFEBA7" id="forgot-password" asp-page="./ForgotPassword">Забули пароль?</a></h6>

                                <h6 class="mt-2 pb-lg-2" style="color: #FFEBA7">Сторонні сервіси для входу</h6>

                                <div class="d-flex justify-content-center text-center mt-2 pt-1">
                                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                            <div>
                                                <p>
                                                    @foreach (var provider in Model.ExternalLogins!)
                                                    {
                                                        <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Увійдіть за допомогою Вашого @provider.DisplayName аккаунту">@provider.DisplayName</button>
                                                    }
                                                </p>
                                            </div>
                                        </form>
                                </div>
                            </div>

                            <div>
                                <p class="mb-0">
                                    Не маєте аккаунту? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-white-50 fw-bold">Зареєструватись</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            $('.container').addClass('show');
        });
    </script>
}
